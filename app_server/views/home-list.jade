extends layout
include _includes/sharedHTMLfunctions
block content
  #banner.page-header
    .row
      .col-lg-6
        h1= pageHeader.title
          small &nbsp;#{pageHeader.strapline}
  .row
    .col-xs-12.col-sm-8
      .row.list-group
      each item in items
        .col-xs-12.list-group-item
          h4
            a(href='/location')= item.name
            <br>
            img(border="0" src=item.imm)
            small &nbsp;
              +outputRating(item.rating)
            p.description= item.description
            p
            p.price= item.price
              
                span.label.label-warning=item.cart
                &nbsp;
    .col-xs-12.col-sm-4
      p.lead=sidebar
        | 